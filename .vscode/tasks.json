{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SAMD",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload JLINK SAMD",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "uploadJLINK",
                "--target",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload USB SAMD",
            "type": "shell",
            "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\pio.exe",
            "args": [
                "run",
                "-e",
                "uploadUSB",
                "--target",
                "upload"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "OpenKNXproducer",
            "type": "shell",
            "command": "${env:USERPROFILE}\\bin\\OpenKNXproducer.exe",
            "args": [
                "create",
                "--Debug",
                "src/Sensormodul"
            ],
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Build-Release",
            "type": "shell",
            "command": "release\\BuildRelease.cmd",
            "args": [],
            "problemMatcher": [],
            "group": "test"
        }
    ]
}